<link rel="stylesheet" href="/css/signin.css">

<div class="sign-up__container">
    <div class="form-div">
        <div class="title">
            Log In 
        </div>
        <form method="post" action="/users/log-in">
            <div class="inputWithIcon">
                <input class="input-tag" type = "email" name="email" placeholder="Email" required>
                <i class="far fa-envelope"></i>
            </div>
            <div class="inputWithIcon">
                <input class="input-tag" type = "password" name="password" placeholder="Password" required>
                <i class="fas fa-unlock"></i>
            </div>
            <button class="signUp-btn" type="submit">  Log In </button>
        </form>
        <div class="other-link">
            Already have a account? &nbsp;
            <a href="/users/sign-up"> Create Account </a>
        </div>
    </div>
</div>